CHIP DecoderSegment201860153 {
    IN D, C, B, A;
    OUT f;

    PARTS:
    // Implement f = D + C + B'路A + B路A'
    Not(in=B, out=notB);
    Not(in=A, out=notA);
    And(a=notB, b=A, out=term1);  // B'路A
    And(a=B, b=notA, out=term2);   // B路A'
    Or(a=D, b=C, out=term3);
    Or(a=term1, b=term2, out=term4);
    Or(a=term3, b=term4, out=f);
}
